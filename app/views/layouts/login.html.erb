<body>
  <main>
    <h1>Welcome</h1>

    <%= link_to 'Login with Google', '/auth/google_oauth2',
      :id => 'sign_in', :class => 'fa fa-google-plus fa-lg' %>
  </main>

  <footer class="row container col-xs-12">
    <hr />
  </footer>
</body>
</html>

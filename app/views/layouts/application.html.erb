<!DOCTYPE html>
<html>
<head>
  <title>Ask</title>
  <link href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/lumen/bootstrap.min.css" rel="stylesheet">
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">

      <ul class="nav navbar-nav pull-left">
        <li class="dropdown">
          <a class="navbar-brand dropdown-toggle" data-toggle="dropdown" href="#">
            <strong style="font-size:1.7em;">Ask</strong>
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu" role="menu">
            <li>
              <a href="/">
                <span class="glyphicon glyphicon-home"></span>&nbsp;<span>Home</span>
              </a>
            </li>
            <li>
              <a href="<%= new_question_path %>">
                <span class="glyphicon glyphicon-plus"></span>&nbsp;<span>Add Question</span>
              </a>
            </li>
            <li>
              <a href="<%= questions_path(:user_id => current_user.id) %>">
                <span class="glyphicon glyphicon-user"></span>&nbsp;<span>My Questions</span>
              </a>
            </li>
            <li>
              <a href="#">
                <span class="glyphicon glyphicon-heart"></span>&nbsp;<span>Favorite</span>
              </a>
            </li>
          </ul>
        </li>
      </ul>

      <ul class="nav navbar-nav pull-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= gravatar_image_tag current_user.email,
              :alt => current_user.username,
              :title => current_user.username,
              :class => 'img-circle',
              :gravatar => { :secure => true, :size => 30 }
            %> <span class="current-user"><%= current_user.username %></span>
          </a>
          <ul class="dropdown-menu" role="menu">
            <li>
              <%= link_to signout_path do %>
                <span class="glyphicon glyphicon-log-out"></span> <span>Sign Out</span>
              <% end %>
            </li>
          </ul>
        </li>
      </ul>

    </div><!-- container-fluid -->
  </nav>

  <main class="container-fluid">
    <%= yield %>
  </main>

  <footer>
  </footer>
</body>
</html>
